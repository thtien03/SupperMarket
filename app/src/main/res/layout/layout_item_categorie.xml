<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/constraint_layout_categories"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/img_categories"
        android:layout_width="100dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/img_books"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/app_name" />
    <TextView
        android:id="@+id/txt_categories"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Tủ lạnh,máy giặt,máy lạnh"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:includeFontPadding="false"
        app:layout_constraintEnd_toEndOf="@id/img_categories"
        app:layout_constraintTop_toBottomOf="@id/img_categories"
        app:layout_constraintStart_toStartOf="@id/img_categories"/>
</androidx.constraintlayout.widget.ConstraintLayout>